

{block content}
<div class="container">
<table>
	<tr>
		<th>Title</th>
		<th>Description</th>
		<th>Date</th>
	</tr>
	{foreach $tasks as $task}
		<tr class="task">
			<td class="task_title">{$task->title}</td>
			<td class="task_description">{$task->description}</td>
			<td><div class="date">{$task->created_at|date:'F j, Y'}</div></td>
		</tr>

	{/foreach}
</table>

</div>


